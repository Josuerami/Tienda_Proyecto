<%- include('../parciales/encabezado') %>

<section class="panel">
  <h1 class="titulo">Carrito de compras</h1>

  <% if (carrito.length === 0) { %>
    <p>No tienes productos en el carrito.</p>
  <% } else { %>
    <table class="tabla">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Precio</th>
          <th>Total</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% carrito.forEach(item => { %>
          <tr>
            <td><%= item.nombre %></td>
            <td><%= item.cantidad %></td>
            <td>$<%= Number(item.precio).toFixed(2) %></td>
            <td>$<%= (item.cantidad * item.precio).toFixed(2) %></td>
            <td>
              <form method="post" action="/carrito/eliminar/<%= item.id %>">
                <button class="btn secundario" type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a class="btn" href="/carrito/checkout">Finalizar compra</a>
  <% } %>
</section>

