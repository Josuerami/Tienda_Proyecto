<%- include('../parciales/encabezado') %>

<section class="ticket">
  <div class="ticket-header">
    <h3>Canelitos</h3>
    <p>Ticket #<%= pedido.id %></p>
    <p><strong>Cliente:</strong> <%= pedido.nombre_completo %></p>
    <p><strong>MÃ©todo:</strong> <%= pedido.metodo_pago %></p>
    <p><strong>Fecha:</strong> <%= new Date(pedido.creado_en).toLocaleString() %></p>
  </div>
  <table class="ticket-tabla">
    <thead><tr><th>Producto</th><th>Cant</th><th>Unit</th><th>Total</th></tr></thead>
    <tbody>
      <% items.forEach(i => { %>
        <tr>
          <td><%= i.nombre %></td>
          <td><%= i.cantidad %></td>
          <td>$<%= Number(i.precio_unitario).toFixed(2) %></td>
          <td>$<%= (i.cantidad * Number(i.precio_unitario)).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <div class="ticket-total"><strong>Total:</strong> $<%= Number(pedido.total).toFixed(2) %></div>
  <div class="acciones">
    <button class="btn" onclick="window.print()">Imprimir ticket</button>
    <a class="btn secundario" href="/">Volver al inicio</a>
  </div>
</section>

